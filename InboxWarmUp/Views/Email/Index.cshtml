@model IEnumerable<InboxWarmUp.Models.EmailAccount>

<h2>Email Accounts</h2>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Display Name</th>
            <th>Is Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Email</td>
                <td>@item.DisplayName</td>
                <td>@item.IsActive</td>
                <td>
                    <form asp-action="RunEmailAccount" method="post" onsubmit="return confirm('Are you sure you want to run this email account?');" style="display:inline;">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-success">Run</button>
                    </form>
                    <form asp-action="StopRun" method="post" onsubmit="return confirm('Are you sure you want to stop this email account?');" style="display:inline;">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-warning">Stop</button>
                    </form>
                    <form asp-action="RemoveEmailAccount" method="post" onsubmit="return confirm('Are you sure you want to delete this email account?');" style="display:inline;">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
