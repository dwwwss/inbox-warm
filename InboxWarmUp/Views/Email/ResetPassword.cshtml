@model InboxWarmUp.Models.User

@{
    ViewData["Title"] = "Reset Password";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Reset Password</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <form id="resetPasswordForm" method="post" asp-action="ResetPassword">
                <div class="form-group mb-3">
                    <label for="email" class="form-label text-dark"><i class="fas fa-envelope me-2"></i>Email</label>
                    <input type="email" class="form-control" name="Email" id="email" placeholder="Enter your email" required />
                </div>

                @* Display success or error messages *@
                @if (ViewBag.PasswordSent != null)
                {
                    <div class="alert @((ViewBag.PasswordSent == true) ? "alert-success" : "alert-danger")">
                        @(ViewBag.PasswordSent == true ? "Password reset instructions have been sent to your email!" : "An error occurred. Please try again.")
                    </div>
                }

                <button type="submit" class="btn btn-primary w-100"><i class="fas fa-paper-plane me-2"></i>Send Reset Link</button>
            </form>
            <div class="text-center mt-3">
                <p class="text-muted">&copy; 2024 WarmUpInbox</p>
            </div>
        </div>
    </div>
</div>
