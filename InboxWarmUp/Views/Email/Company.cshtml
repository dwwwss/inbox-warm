@model InboxWarmUp.Models.User // Adjust this line to match the actual namespace and class name of your model
@using InboxWarmUp.Models

@{
    ViewData["Title"] = "Company Information";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Company Information</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <form id="companyForm" method="post" asp-action="UpdateCompany">
                <!-- Update action to handle company information -->
                <input type="hidden" name="Id" value="@Model.Id" /> <!-- Hidden field for company ID -->

                <div class="form-group mb-3">
                    <label for="companyName" class="form-label text-dark"><i class="fas fa-building me-2"></i>Company Name</label>
                    <input type="text" class="form-control" name="CompanyName" id="companyName" placeholder="Enter company name" value="@Model.CompanyName" required />
                </div>

                <div class="form-group mb-3">
                    <label for="companySize" class="form-label text-dark"><i class="fas fa-users me-2"></i>Company Size</label>
                    <select class="form-control" name="CompanySize" id="companySize" required>
                        @* <option value="">Select company size</option>
                        <option value="1-10" @(Model.CompanySize == "1-10" ? "selected" : "")>1-10</option>
                        <option value="11-50" @(Model.CompanySize == "11-50" ? "selected" : "")>11-50</option>
                        <option value="51-200" @(Model.CompanySize == "51-200" ? "selected" : "")>51-200</option>
                        <option value="201-500" @(Model.CompanySize == "201-500" ? "selected" : "")>201-500</option>
                        <option value="500+" @(Model.CompanySize == "500+" ? "selected" : "")>500+</option> *@
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label for="companyWebsite" class="form-label text-dark"><i class="fas fa-globe me-2"></i>Company Website</label>
                    <input type="url" class="form-control" name="CompanyWebsite" id="companyWebsite" placeholder="Enter company website" value="@Model.CompanyWebsite" required />
                </div>

                <div class="form-group mb-3">
                    <label for="companyType" class="form-label text-dark"><i class="fas fa-th-list me-2"></i>Company Type</label>
                    <input type="text" class="form-control" name="CompanyType" id="companyType" placeholder="Enter company type" value="@Model.CompanyType" required />
                </div>

               @*  <button type="submit" class="btn btn-primary w-100"><i class="fas fa-save me-2"></i>Update Company Info</button> *@
            </form>
            <div class="text-center mt-3">
                <p class="text-muted">&copy; 2024 WarmUpInbox</p>
            </div>
        </div>
    </div>
</div>
