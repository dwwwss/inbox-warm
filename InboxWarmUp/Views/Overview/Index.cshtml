@model InboxWarmUp.Models.OverviewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Overview</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            border: none;
            border-radius: 10px;
            transition: transform 0.2s;
        }

            .card:hover {
                transform: scale(1.05);
            }

        .card-title {
            font-weight: bold;
            font-size: 1.25rem;
        }

        .stats-card {
            border-left: 5px solid #fff;
            position: relative;
        }

            .stats-card i {
                position: absolute;
                top: 15px;
                left: 15px;
                font-size: 2rem;
            }
    </style>
</head>
<body>



    <!-- Main Content -->
    <div class="container-fluid p-4">
        <h1 class="h3 mb-4">Overview</h1>
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="card stats-card bg-primary text-white">
                    <i class="fas fa-envelope"></i>
                    <div class="card-body">
                        <h5 class="card-title">Total Mailboxes</h5>
                        <p class="card-text">@Model.TotalMailboxes</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card stats-card bg-success text-white">
                    <i class="fas fa-envelope-open-text"></i>
                    <div class="card-body">
                        <h5 class="card-title">Active Mailboxes</h5>
                        <p class="card-text">@Model.ActiveMailboxes</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card stats-card bg-danger text-white">
                    <i class="fas fa-envelope-slash"></i>
                    <div class="card-body">
                        <h5 class="card-title">Inactive Mailboxes</h5>
                        <p class="card-text">@Model.InactiveMailboxes</p>
                    </div>
                </div>
            </div>
           
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
