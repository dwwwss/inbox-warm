@model InboxWarmUp.ViewModels.ForgotPasswordViewModel

@{
    Layout = "~/Views/Shared/LoginRegisterLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Forgot Password - InboxWarmUp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #0A1F44;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
            color: white;
        }

        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 100%;
        }

        .forgot-password-container {
            background-color: white;
            padding: 3rem;
            border-radius: 15px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
            text-align: center;
            color: #0A1F44;
        }

        h2 {
            font-weight: 700;
            font-size: 1.5rem;
            color: #0A1F44;
            margin-bottom: 1.5rem;
        }

        .form-control {
            border: 1px solid #CED4DA;
            border-radius: 5px;
            padding: 10px;
            font-size: 1rem;
        }

        .btn {
            background-color: #0A74DC;
            color: white;
            border: none;
            padding: 12px;
            font-size: 1.1rem;
            font-weight: bold;
            margin-top: 1rem;
            width: 100%;
            border-radius: 5px;
        }

            .btn:hover {
                background-color: #084298;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="forgot-password-container">
            @if (ViewBag.PasswordSent)
            {
                <h2>Password Reset Requested</h2>
                <p>If an account with that email exists, we have sent a new password to your email address.</p>
                <div class="text-center mt-4">
                    <a href="/Account/Login" class="btn">Back to Login</a>
                </div>
            }
            else
            {
                <h2>Forgot Password</h2>
                <form asp-action="ForgotPassword" method="post">
                    <div class="mb-3">
                        <input asp-for="Email" class="form-control" placeholder="Enter your email address" required />
                    </div>
                    <button type="submit" class="btn">Send Reset Link</button>
                </form>
                <p class="mt-3">Remembered your password? <a href="/Account/Login" class="text-muted">Login here</a></p>
            }
        </div>
    </div>
</body>
</html>
